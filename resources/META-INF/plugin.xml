<idea-plugin version="2">
    <id>cn.pinmix.shaohui.ACNPlugin</id>
    <name>ACNPlugin</name>
    <version>0.2</version>
    <vendor email="wsshh1314@outlook.com" url="">Shaohui Wang</vendor>

    <description><![CDATA[
      <ul>
      <li>Append Class Name at each end of the declared var name(s)</li>
      <li>声明的变量名称后追加类型词尾</li>
      </ul>
      <em>eg1:</em>
      <br>type code<br>
      <code>
      private static JButton _test
      </code>,
      then press shortcut key (default is ALT + C ) ,you will get<br>
       <code>
      private static JButton _testJButton
      </code>
       <p><br>
       <em>eg2:(move caret to the current line)</em><br>
      <code>
      private Button aa,bb,cc,dd;
      </code><br>
      then press shortcut key(default is "ALT + B"),then you will get<br>
      <code>
       private Button aaButton,bbButton,ccButton,ddButton;
      </code>
      <p>
    ]]></description>

    <change-notes><![CDATA[
      version 0.2 ,增加行内连续声明的变量批量追加<br>
      version 0.1 ,only for java <br>
      <em></em>
    ]]>
    </change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="141.0"/>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->

        <action id="Shaohui.ACNPAction" class="cn.pinmix.ACNPAction" text="ACNPlugin"
                description="append Class Name at the end of the declared var name">
            <add-to-group group-id="CodeCompletionGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt C"/>
        </action>
        <action id="Shaohui.LineBatAction" class="cn.pinmix.LineBatAction" text="LineBat">
            <add-to-group group-id="CodeCompletionGroup" anchor="first"/>
            <keyboard-shortcut keymap="$default" first-keystroke="alt B"/>
        </action>
    </actions>

</idea-plugin>